{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "lib": ["dom", "es2017"], // Include ES2017
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "allowJs": true,
    "types": ["jest"]   // Ensure "jest" is added here
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ]
}